<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="base.definition">
        <put-attribute name="footer" value="/WEB-INF/pages/footer.jsp" />
        <put-attribute name="header" value="/WEB-INF/pages/header.jsp" />
    </definition>

    <definition name="simple.definition">
        <put-attribute name="footer" value="/WEB-INF/pages/footer.jsp" />
        <put-attribute name="header" value="/WEB-INF/pages/simple-header.jsp" />
    </definition>

    <definition name="extended.definition" extends="base.definition">
        <put-attribute name="navbar" value="/WEB-INF/pages/navbar.jsp" />
    </definition>

    <definition name="login" template="/WEB-INF/pages/login.jsp" extends="simple.definition" />
    <definition name="error" template="/WEB-INF/pages/error.jsp" extends="simple.definition" />
    <definition name="authors" template="/WEB-INF/pages/authors.jsp" extends="extended.definition" />
    <definition name="tags" template="/WEB-INF/pages/tags.jsp" extends="extended.definition" />
    <definition name="news-administration" template="/WEB-INF/pages/news-administration.jsp" extends="extended.definition" />
    <definition name="news-edit" template="/WEB-INF/pages/news-edit.jsp" extends="extended.definition" />
    <definition name="news-list-administration" template="/WEB-INF/pages/news-list-administration.jsp" extends="extended.definition" />
</tiles-definitions>